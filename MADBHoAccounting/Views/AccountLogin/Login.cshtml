    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/select2.min.js"></script>

    <script type="text/javascript">

        var msg = '@ViewBag.Message';
        $(document).ready(function () {
            //if (msg == "Success") {
            //    $('#exampleModal').modal('show')
            //    $('#first').focus();
            //}
        })

        $("#first").on("input", function () {
            var one = $(this).val()
            if (one.length == 1) {
                $('#second').focus();
            }
        })

        $("#second").on("keyup", function (e) {
            var two = $(this).val()
            if (e.which == 8 && two.length == 0) {
                $('#first').focus();
                $('#first').val("");
            }
            else if (two.length == 1) {
                $('#third').focus();
            }
        })

        $("#third").on("keyup", function (e) {
            var three = $(this).val()
            if (e.which == 8 && three.length == 0) {
                $('#second').focus();
                $('#second').val("");
            }
            if (three.length == 1) {
                $('#fourth').focus();
            }
        })

        $("#fourth").on("keyup", function (e) {
            var fourth = $(this).val()
            if (e.which == 8 && fourth.length == 0) {
                $('#third').focus();
                $('#third').val("");
            }
        })

        $('#btnSubmit').on('click', function () {
            var one = $('#first').val()
            var two = $('#second').val()
            var three = $('#third').val()
            var four = $('#fourth').val()
            $('#otpCode').val(one+two+three+four);
            alert($('#otpCode').val())
        })
    </script>
