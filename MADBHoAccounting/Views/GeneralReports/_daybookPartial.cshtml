@model IEnumerable<MADBHoAccounting.ViewModels.TrialBalance>

@{
    ViewData["Title"] = "Index";
}

<div style="margin:0;">
    <div class="table-responsive">
        <table class="table table-hover table-bordered w-100" id="reportId" border="1">
            <thead>
                <tr class="text-center" style="background-color: #2b580c;">
                    <th class="text-white">No</th>
                    <th class="text-white">Main Heaed</th>
                    <th class="text-white">Debit</th>
                    <th class="text-white">Credit</th>
                    @*<th></th>*@
                    @*<th class="text-white">
            @Html.DisplayNameFor(model => model.DebitAmount)
        </th>
        <th class="text-white">
            @Html.DisplayNameFor(model => model.MainHead)
        </th>
        <th class="text-white">
            @Html.DisplayNameFor(model => model.CreditAmount)
        </th>*@
                </tr>
            </thead>
            <tbody class="fw-bold">
                @{
                    int rowNo = 0;
                 }

                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                    @(rowNo += 1)
                            </td>
                            @*<td align="right">@item.DebitAmount</td>
                                <td align="center">@item.MainHead</td>
                                <td align="right">@item.CreditAmount</td>*@
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.MainHead)
                            </td>
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Debit)
                            </td>                            
                            <td align="right">
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>

                            @*<td class="row w-100 ml-2">
                                    <a class="btn btn-danger">Report</a>
                                </td>*@
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-success" style="font-size:16px; font-weight:600;">No Data Found!</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>