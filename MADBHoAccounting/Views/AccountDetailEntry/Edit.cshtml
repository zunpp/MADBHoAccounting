@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {

        })

        $('#towncode').on('input', function () {
            var townCode = $(this).val();
            var groupNumber = $('#groupNumber').val();
            $.ajax({
                type: 'GET',
                url: '/AccountDetailEntry/Name_Load',
                data: { townCode: townCode, groupNumber: groupNumber },
                beforeSend: function () {

                },
                success: function (data) {
                    $.each(data, function (key, value) {
                        if (key == "diviSionName") {
                            $("#divisionname").val(value);
                        }
                        else if (key == "townName") {
                            $("#townname").val(value);
                        }
                    })
                }
            })
        })

        $('#accountcode').on('input', function () {
            var accountCode = $(this).val();
            $.ajax({
                type: 'GET',
                url: '/AccountDetailEntry/Account_Load',
                data: { accountCode: accountCode },
                beforeSend: function () {

                },
                success: function (data) {
                    $.each(data, function (key, value) {
                        if (key == "subsiHeadName") {
                            $("#subsiheadname").val(value);
                        }
                        else if (key == "mainHeadName") {
                            $("#mainheadname").val(value);
                        }
                    })
                }
            })
        })

    </script>
